#!/usr/bin/env bash

# `.aliases` is used to provide custom aliases.


# === Aliases ===

# Alias'
#########################################################################################################
# Git CMD
#########################################################################################################
alias gs="git status"
alias ga="git add"
alias gcm="git commit -m $@"
alias gpsh="git push"
alias gpull='git pull $1'
alias gdiff='git diff $1'
alias glb='git branch'
alias gbr='git branch -r'
alias shout='echo hello: $@'
#########################################################################################################
# Docker CMD
#########################################################################################################
alias dVolPrune='docker volume rm $(docker volume ls -q)'
alias dContCl='docker rm -f $(docker ps -a -q)'
alias dCompUp="docker compose -f docker-compose.yml up -d"
alias dCompDwn="docker-compose -f docker-compose.yml down"
alias dPs='docker ps -a'
alias dVolPrune='docker system prune --volumes'
#########################################################################################################
# linux CMD
#########################################################################################################
alias c="clear"
alias client='cd ~/playground/goprojects/book-client/book-library-client'
alias dg='cd ~/playground/goprojects/docker-go'
alias dg1='cd ~/playground/goprojects/docker-go-2'
alias dockerd="open -a docker && while ! docker info > /dev/null 2>&1; do sleep 1 ; done"
