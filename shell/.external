#!/usr/bin/env bash

# `.external` handles all external tools.


# === fzf ===
# https://github.com/junegunn/fzf

if [[ ! "$PATH" == */opt/fzf/bin* ]]; then
  export PATH="$PATH:$(brew --prefix)/opt/fzf/bin"

  # Enable `fzf-git`:
  # https://github.com/junegunn/fzf-git.sh
  source 'fzf-git.sh'  # installed via `zplug`

  # Enable `fzf`:
  eval "$(fzf --zsh)"
fi

# Configuration:
export FZF_DEFAULT_COMMAND='fd --hidden --strip-cwd-prefix --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND='fd --type=d --hidden --strip-cwd-prefix --exclude .git'
export FZF_CTRL_T_OPTS="--preview '_fzf_complete_realpath {}'"
export FZF_ALT_C_OPTS="--preview '_fzf_complete_realpath {}'"

# Theme: Ayu Light base16
# https://github.com/tinted-theming/tinted-fzf
# Use generator to customize:
# https://vitormv.github.io/fzf-themes/
# To add wrap lines add:
# --preview-window=wrap
export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS
 --color=bg:-1,fg:-1,bg+:#dce7f2,fg+:#121212
 --color=hl:#5f87af,hl+:#00bfff
 --color=header:#36a3d9,info:#f2ae49,pointer:#4cbf99
 --color=marker:#4cbf99,prompt:#f2ae49,spinner:#4cbf99"

# Use fd (https://github.com/sharkdp/fd) for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fd --hidden --exclude .git . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fd --type=d --hidden --exclude .git . "$1"
}

# See `.completions` file for all the list of fast tab completions.


# === z ===
# https://github.com/ajeetdsouza/zoxide

eval "$(zoxide init zsh)"
